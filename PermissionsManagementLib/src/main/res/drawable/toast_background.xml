<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/> <!-- Rounded Corners -->
            <solid android:color="#E3F2FD"/> <!-- from the background color -->
            <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp"/>
        </shape>
    </item>

    <!-- Main Background Layer -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#E3F2FD"/> <!-- Background color -->
            <padding android:left="16dp" android:right="16dp" android:top="12dp" android:bottom="12dp"/>
        </shape>
    </item>

</layer-list>
